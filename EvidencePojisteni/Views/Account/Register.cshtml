@model RegisterViewModel

@{
	ViewData["Title"] = "Registrace";
}

<div class="container-fluid bg-secondary bg-opacity-50 shedow-max m-auto">
	<div class="container d-flex justify-content-center">
		<div class="row">
			<div class="form-signin my-color my-input">
				<form class="d-flex flex-column gap-2" asp-route-returnUrl="@ViewData["ReturnUrl"]">
					<img class="mb-1" src="~/images/Logo-projekt.webp" alt="logo-panák" />
					<h2 class="mb-4 fw-normal text-center display-4 my-color">Registrace</h2>
					<div asp-validation-summary="All" class="text-danger"></div>
					<div class="form-floating">
						<input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="jmeno@email.com">
						<label asp-for="Email" for="floatingInput">Email</label>
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
					<div class="form-floating">
						<input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Heslo" />
						<label asp-for="Password" for="floatingPassword" class="form-label">Heslo</label>
					</div>
					<div class="form-floating">
						<input asp-for="ConfirmPassword" type="password" class="form-control" id="floatingConfirmPassword" placeholder="Heslo znovu" />
						<label asp-for="ConfirmPassword" for="floatingConfirmPassword" class="form-label">Heslo znovu</label>
					</div>
					<div class="form-signin">
						<button type="submit" class="my-btn fs-4 w-100 my-color">Registrovat</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}