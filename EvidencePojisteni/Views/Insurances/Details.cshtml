@model EvidencePojisteni.Models.Insurance

@{
	ViewData["Title"] = "Detaily pojištění";
}

<h1 class="mb-4 fw-normal text-center display-4 my-color text-decoration-underline ">Detaily pojištění</h1>
<hr />

<div class="card bg-secondary bg-opacity-50 border-2 rounded-3 p-2 w-100">
	<dl class="row ">
		<dt class="col-4">
			Pojištěnec
		</dt>
		<dd class="offset-1 col-7">
			@Html.DisplayFor(model => model.InsuredUser.FirstName)
			@Html.DisplayFor(model => model.InsuredUser.LastName)
		</dd>
		<dt class="col-4">
			@Html.DisplayNameFor(model => model.InsuranceType)
		</dt>
		<dd class="offset-1 col-7">
			@Html.DisplayFor(model => model.InsuranceType)
		</dd>
		<dt class="col-4">
			@Html.DisplayNameFor(model => model.SubjectOfInsurance)
		</dt>
		<dd class="offset-1 col-7">
			@Html.DisplayFor(model => model.SubjectOfInsurance)
		</dd>
		<dt class="col-4">
			@Html.DisplayNameFor(model => model.Amount)
		</dt>
		<dd class="offset-1 col-7">
			@Html.DisplayFor(model => model.Amount)
		</dd>
		<hr />
		<dt class="col-4 col-md-2">
			@Html.DisplayNameFor(model => model.DateFrom)
		</dt>
		<dd class="offset-1 col-7 col-md-2">
			@Html.DisplayFor(model => model.DateFrom)
		</dd>
		<dt class="col-4 col-md-2">
			@Html.DisplayNameFor(model => model.DateTo)
		</dt>
		<dd class="offset-1 col-7 col-md-2">
			@Html.DisplayFor(model => model.DateTo)
		</dd>
	</dl>
</div>
<div class="d-flex justify-content-center p-3">
	<a class="btn fs-5 my-btn" asp-controller="InsuredUsers" asp-action="Details" asp-route-id="@Model?.InsuredUserId">Zpět</a>
</div>
