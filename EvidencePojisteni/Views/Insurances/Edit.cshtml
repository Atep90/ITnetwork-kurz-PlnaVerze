@model EvidencePojisteni.Models.Insurance

@{
	ViewData["Title"] = "Upravit pojištění";
}

<h1 class="mb-4 fw-normal text-center display-4 my-color text-decoration-underline ">Upravit pojištění</h1>


<hr />
<div class="container-fluid bg-secondary bg-opacity-50 shedow-max m-auto ">
	<div class="container my-color">
		<div class="row">
			<div>
				<div class="d-flex justify-content-center">
					<img src="~/images/logo_pojisteni.webp" alt="logo-nové pojištění" width="50%" />
				</div>
				<form asp-action="Edit">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<input type="hidden" asp-for="InsuranceId" />
					<div class="form-group">
						<label asp-for="InsuredUserId" class="control-label d-none"></label>
						<select asp-for="InsuredUserId" class="form-control d-none" asp-items="ViewBag.InsuredUserId"></select>
						<span asp-validation-for="InsuredUserId" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="InsuranceType" class="control-label"></label>
						<select asp-for="InsuranceType" class="form-select">
							<option>Životní pojištění</option>
							<option>Cestovní pojištění</option>
							<option>Pojištění nemovitosti</option>
							<option>Úrazové pojištění</option>
							<option>Havarijní pojištění</option>
						</select>
						<span asp-validation-for="InsuranceType" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="SubjectOfInsurance" class="control-label"></label>
						<input asp-for="SubjectOfInsurance" class="form-control" />
						<span asp-validation-for="SubjectOfInsurance" class="text-danger"></span>
					</div>
					<div class="d-sm-flex justify-content-between pb-4">
						<div class="form-group">
							<label asp-for="Amount" class="control-label"></label>
							<input asp-for="Amount" class="form-control" />
							<span asp-validation-for="Amount" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="DateFrom" class="control-label"></label>
							<input asp-for="DateFrom" class="form-control" />
							<span asp-validation-for="DateFrom" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="DateTo" class="control-label"></label>
							<input asp-for="DateTo" class="form-control" />
							<span asp-validation-for="DateTo" class="text-danger"></span>
						</div>
					</div>
					<div class="form-group">
						<input type="submit" value="Uložit" class="my-btn fs-4 w-100 my-color" />
					</div>
				</form>
			</div>
		</div>

		<div class="d-flex justify-content-center p-3">
			<a class="btn fs-5 my-color" asp-controller="InsuredUsers" asp-action="Details" asp-route-id="@Model?.InsuredUserId">Zpět</a>
		</div>

	</div>
</div>